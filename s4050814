    private void getPageActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_getPageActionPerformed
     
        urlThread link1 = new urlThread(url1.getText(), "Thread1");
        urlThread link2 = new urlThread(url2.getText(), "Thread2");
        link1.start();
        link2.start();        
    }//GEN-LAST:event_getPageActionPerformed

    /**
     * @param args the command line arguments
     */
    public void showHeader(String URL, String Thread){
        String url = URL;
        String thread = Thread;
        try {

            URL obj = new URL(url);
            URLConnection conn = obj.openConnection();
            Map<String, List<String>> map = conn.getHeaderFields();
            Header.setText(Header.getText() + thread + " :\n");

            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                Header.setText(Header.getText() + "Key : " + entry.getKey() + " ,Value : " + entry.getValue() + "\n");
            }
            Header.setText(Header.getText() + "\nGet HTTP Header For : " + thread + "\n");
            String server = conn.getHeaderField("Server");

            if (server == null) {
                Header.setText(Header.getText() + "'Server' is not found!\n");
            } else {
                Header.setText(Header.getText() + "Server : " + server + "\n");
            }
            Header.setText(Header.getText() + "Done\n________________________\n");
        } catch (Exception e) {
            e.printStackTrace();
        }
        
    }
    public class urlThread extends Thread{
        String link, threadNo;
        int delay = 3000;
        public urlThread(String url,String no){
            link = url;
            threadNo = no;
        }
        
        @Override
        public void run(){
            try{
                Thread.setText(Thread.getText()+ threadNo + " : Start Get URL \n");
                if (threadNo.equals("Thread1")){
                    showURL1.setPage(link);
                }
                if(threadNo.equals("Thread2")){
                    showURL2.setPage(link);
                }
                Thread.setText(Thread.getText() + threadNo + " : Print Header \n");
                showHeader(link,threadNo);
                Thread.setText(Thread.getText() + threadNo  +" : Finish \n");

            }catch(IOException ex){
                printf("cannot show");
            }
        }
    }
